name: PikPak转存OneDrive
on:
  repository_dispatch:
  workflow_dispatch:
    inputs:
      Folder:
        description: '保存目录'
        required: true
        default: 'PikPak'

jobs:
  Aria2-OneDrive:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2

      - name: Install Aria2
        run: sudo apt install -y aria2
      
      - name: Install Python3.9
        uses: actions/setup-python@v2
        with:
          python-version: 3.9

      - name: Install required Python dependencies
        run: |
          python -m pip install --upgrade pip wheel
          pip install requests
      
      - name: Download
        id: downloading
        run: |
          mkdir downloads
          python task.py --projet="${{ secrets.DETA_PROJECT_ID }}" --apikey="${{ secrets.DETA_API_KEY }}" --act="download"
          filename=$(ls downloads | head -n1)
          echo "::set-output name=path::downloads/$filename"
          echo "::set-output name=filename::$filename"
          echo "::set-output name=taskkey::$taskkey"
          size=$(ls -l downloads/$filename | awk '{print $5}')
          echo "::set-output name=size::$size"
          
      - name: Upload to OneDrive
        uses: OneDriveUploader/onedrive-upload-action@v1
        if: steps.downloading.outputs.filename != '' && !cancelled() && !failure()
        with:
          file: ${{ steps.downloading.outputs.path }}
          remote_folder: ${{ github.event.inputs.Folder }}
          client_id: ${{ secrets.ONEDRIVE_CLIENT_ID }}
          client_secret: ${{ secrets.ONEDRIVE_CLIENT_SECRET }}
          refresh_token: ${{ secrets.ONEDRIVE_REFRESH_TOKEN }}
          
      - name: Save data and delete remote download list
        id: database
        if: steps.downloading.outputs.filename != '' && !cancelled() && !failure()
        run: |
          python task.py --projet="${{ secrets.DETA_PROJECT_ID }}" --apikey="${{ secrets.DETA_API_KEY }}" --taskkey="${{ steps.downloading.outputs.taskkey }}" --act="del"
          echo "::set-output name=status::ok"
          
      - name: Trigger new download task
        uses: benc-uk/workflow-dispatch@v1
        if: steps.downloading.outputs.filename != '' && !cancelled() && !failure()
        with:
          workflow: onedrive.yml
          ref: main
        
      - name: Delete old upload records
        uses: Mattraks/delete-workflow-runs@v2
        with:
          token: ${{ github.token }}
          repository: ${{ github.repository }}
          retain_days: 0
          keep_minimum_runs: 0
